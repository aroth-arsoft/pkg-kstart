use Test::More;

my @files = qw(krenew.pod);
my $total = scalar (@files);
plan tests => $total;

eval 'use Test::Pod 1.00';
SKIP: {
    skip 'Test::Pod 1.00 required for testing POD', $total if $@;
    for my $file (@files) {
        pod_file_ok ("@abs_top_srcdir@/$file", $file);
    }
}
