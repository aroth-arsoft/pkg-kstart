use Test::More;

my @files = qw(k4start.pod);
my $total = scalar (@files);
plan tests => $total;

eval 'use Test::Pod 1.00';
SKIP: {
    skip $total, 'Test::Pod 1.00 required for testing POD' if $@;
    for my $file (@files) {
        pod_file_ok ("@abs_top_srcdir@/$file", $file);
    }
}
